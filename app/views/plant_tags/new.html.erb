<div class="container">
  <h1>Add a tag for <%= @plant.name %></h1>
  <%= simple_form_for [@plant, @plant_tag] do |f| %>
    <%= f.input :tag, collection: Tag.all, input_html: {multiple: true, class: "multiple-select"} %>
    <!-- Ci-dessous, notez la version avec l'option include_hidden: false, qui nous permet d'enlever la string vide dans les params[:plant_tag][:tag] -->
    <%#= f.input :tag, collection: Tag.all, input_html: {multiple: true}, include_hidden: false %>
    <%= f.submit "add the tag", class: "btn btn-success" %>
  <% end %>
</div>

